
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
    var update = (Models.EFrame.Producer)ViewBag.ListDL;
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Chi tiết loại sản phẩm</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Chi tiết loại sản phẩm</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="container-fluid" id="suaform">
                        <h2>Sửa loại Sản Phẩm</h2>
                        <div>
                            <form action="@Url.Action("Update","ProducerAdmin")" method="post">
                                <div class="form-group">
                                    <label>Tên loại sản phẩm</label>
                                    <input type="hidden" name="prodId" value="@update.prodId" />
                                    <input type="text" name="prodName" value="@update.prodName" class="form-control w-50" />
                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <textarea class="form-control" name="prodAddress" rows="4" cols="1">@update.prodAddress</textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary" style="width:100px;">Sửa</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


